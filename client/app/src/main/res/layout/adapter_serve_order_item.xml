<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ReleaseBlockStyle"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <com.caocao.client.view.SuperTextView
        android:id="@+id/stv_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sLeftIcon="@mipmap/ic_sort_ico"
        app:sLeftText="保洁服务"
        app:sLeftTextSize="@dimen/t4"
        app:sRightText="抢单中"
        app:sRightTextColor="@color/t4"
        app:sRightTextSize="@dimen/t2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_thumb"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_thumb"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_spec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日常保洁"
                android:textColor="@color/t1"
                android:textSize="@dimen/t3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_spec_price_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥100/次"
                    android:textColor="@color/t2"
                    android:textSize="@dimen/t2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="x1"
                    android:textColor="@color/t2"
                    android:textSize="@dimen/t1" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_order_sn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="订单编号：55632120"
        android:textColor="@color/t2"
        android:textSize="@dimen/t2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_order_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="下单时间：55632120"
        android:textColor="@color/t2"
        android:textSize="@dimen/t2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_divider_line" />


</LinearLayout>