<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@color/bg_page"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/t1"
        android:textSize="18sp" />

    <RelativeLayout
        style="@style/ReleaseBlockStyle"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:src="@mipmap/ic_default_portrait" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_portrait"
            android:layout_alignBottom="@id/iv_portrait"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_portrait"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="@color/t1"
                android:textSize="@dimen/t4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="188123456789"
                android:textColor="@color/t3"
                android:textSize="@dimen/t2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_portrait"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_order"
                android:drawablePadding="13dp"
                android:gravity="center"
                android:text="订单管理"
                android:textColor="@color/t1"
                android:textSize="@dimen/t4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_skill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_skill"
                android:drawablePadding="13dp"
                android:gravity="center"
                android:text="我的技能"
                android:textColor="@color/t1"
                android:textSize="@dimen/t4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ic_collect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/ic_collect"
                android:drawablePadding="13dp"
                android:gravity="center"
                android:text="我的收藏"
                android:textColor="@color/t1"
                android:textSize="@dimen/t4" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout style="@style/ReleaseBlockStyle">

        <com.caocao.client.view.SuperTextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:sLeftIcon="@mipmap/ic_me_address"
            app:sLeftText="地址管理"
            app:sLeftTextMarginL="15dp"
            app:sRightIcon="@mipmap/ic_arrow_r" />

        <com.caocao.client.view.SuperTextView
            android:id="@+id/tv_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:sLeftIcon="@mipmap/ic_me_protocol"
            app:sLeftText="用户协议"
            app:sLeftTextMarginL="15dp"
            app:sRightIcon="@mipmap/ic_arrow_r" />

        <com.caocao.client.view.SuperTextView
            android:id="@+id/tv_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:sLeftIcon="@mipmap/ic_me_privacy"
            app:sLeftText="隐私政策"
            app:sLeftTextMarginL="15dp"
            app:sRightIcon="@mipmap/ic_arrow_r" />

        <com.caocao.client.view.SuperTextView
            android:id="@+id/tv_kefu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:sLeftIcon="@mipmap/ic_me_kefu"
            app:sLeftText="联系客服"
            app:sLeftTextMarginL="15dp"
            app:sRightIcon="@mipmap/ic_arrow_r" />
    </LinearLayout>

</LinearLayout>