<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:padding="10dp"
    tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_portrait"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_default_portrait" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="摩天轮"
        android:textColor="@color/t1"
        android:textSize="@dimen/t4"
        app:layout_constraintBottom_toBottomOf="@id/iv_portrait"
        app:layout_constraintLeft_toRightOf="@id/iv_portrait"
        app:layout_constraintTop_toTopOf="@id/iv_portrait" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_rating5"
        app:layout_constraintBottom_toBottomOf="@id/iv_portrait"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_portrait" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_remark_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="订单超时未评价，系统自动好评"
        android:textColor="@color/t3"
        android:textSize="@dimen/t2"
        app:layout_constraintTop_toBottomOf="@id/iv_portrait" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_remark_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="2020-06-12 18:21:30"
        android:textColor="@color/t3"
        android:textSize="@dimen/t2"
        app:layout_constraintTop_toBottomOf="@id/tv_remark_content" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_remark_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_page"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="5:3"
        app:layout_constraintTop_toBottomOf="@id/tv_remark_time" />
</androidx.constraintlayout.widget.ConstraintLayout>


