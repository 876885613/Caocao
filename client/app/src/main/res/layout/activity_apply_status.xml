<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_not_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@mipmap/ic_not_apply" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110dp"
            android:text="暂未填写技能申请"
            android:textColor="@color/t1"
            android:textSize="@dimen/t8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_release"
            style="@style/ButtonStyle"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:text="发布技能" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_wait_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_apply_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@mipmap/ic_wait_apply" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:text="请耐心等待审核"
            android:textColor="@color/t1"
            android:textSize="@dimen/t8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="预计5个工作日内完成审核"
            android:textColor="@color/t4"
            android:textSize="@dimen/t2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_home"
            style="@style/ButtonStyle"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:text="返回首页" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_succeed_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_apply_bg"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@mipmap/ic_succeed_apply" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:text="恭喜您，您已通过审核"
            android:textColor="@color/t1"
            android:textSize="@dimen/t8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="审核通过"
            android:textColor="@color/t3"
            android:textSize="@dimen/t2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_release_serve"
            style="@style/ButtonStyle"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:text="发布服务" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fail_apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/ic_apply_bg"
        android:visibility="gone"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@mipmap/ic_fail_apply" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="160dp"
            android:text="抱歉，您未通过审核"
            android:textColor="@color/t1"
            android:textSize="@dimen/t8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_refuse_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/t3"
            android:textSize="@dimen/t2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_update"
            style="@style/ButtonStyle"
            android:layout_height="40dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:text="修改信息" />
    </LinearLayout>
</FrameLayout>