<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_page"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout style="@style/ReleaseBlockStyle">

            <com.caocao.client.view.SuperTextView
                android:id="@+id/stv_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:sLeftIcon="@mipmap/ic_contacts_ico"
                app:sLeftText="联系人姓名"
                app:sRightEditHint="请输入姓名" />

            <com.caocao.client.view.SuperTextView
                android:id="@+id/stv_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:sLeftIcon="@mipmap/ic_tel_ico"
                app:sLeftText="联系人电话"
                app:sBottomDividerVisibility="gone"
                app:sRightEditHint="请输入电话" />
        </LinearLayout>

        <include
            android:id="@+id/layout_id_card"
            layout="@layout/layout_id_card" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_next"
            style="@style/ButtonStyle"
            android:layout_marginTop="50dp"
            android:text="下一步" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TutorialStyle"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:text="认证店铺教程" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>