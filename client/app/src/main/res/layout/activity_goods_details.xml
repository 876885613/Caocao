<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_page"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="6:5"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="家政保洁"
                    android:textColor="@color/t1"
                    android:textSize="@dimen/t4" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_cate_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_title"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round_2_ffede1"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="2dp"
                    android:text="家具清洗"
                    android:textColor="@color/t4"
                    android:textSize="@dimen/t2" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.00"
                        android:textColor="@color/t4"
                        android:textSize="@dimen/t6" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_qi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起"
                        android:textColor="@color/t4"
                        android:textSize="@dimen/t2" />
                </LinearLayout>
            </RelativeLayout>

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <TableRow>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_table_title_l"
                        android:gravity="center"
                        android:text="服务名称" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_table_title_r"
                        android:gravity="center"
                        android:text="服务价格" />
                </TableRow>
            </TableLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                tools:ignore="MissingConstraints">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务评价 (5)"
                    android:textColor="@color/t1"
                    android:textSize="@dimen/t4" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_remark_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部"
                    android:textColor="@color/t1"
                    android:textSize="@dimen/t4"
                    app:layout_constraintRight_toRightOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_portrait"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/ic_default_portrait"
                    app:layout_constraintTop_toBottomOf="@id/tv_remark" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="摩天轮"
                    android:textColor="@color/t1"
                    android:textSize="@dimen/t4"
                    app:layout_constraintBottom_toBottomOf="@id/iv_portrait"
                    app:layout_constraintLeft_toRightOf="@id/iv_portrait"
                    app:layout_constraintTop_toTopOf="@id/iv_portrait" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_rating5"
                    app:layout_constraintBottom_toBottomOf="@id/iv_portrait"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/iv_portrait" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_remark_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="订单超时未评价，系统自动好评"
                    android:textColor="@color/t3"
                    android:textSize="@dimen/t2"
                    app:layout_constraintTop_toBottomOf="@id/iv_portrait" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_remark_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="2020-06-12 18:21:30"
                    android:textColor="@color/t3"
                    android:textSize="@dimen/t2"
                    app:layout_constraintTop_toBottomOf="@id/tv_remark_content" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_remark_img"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/bg_page"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:layout_constraintDimensionRatio="5:3"
                    app:layout_constraintTop_toBottomOf="@id/tv_remark_time" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="15dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="服务详情"
                    android:textColor="@color/t1"
                    android:textSize="@dimen/t4" />

                <WebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:ignore="WebViewLayout" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_store_ico"
            android:drawablePadding="2dp"
            android:text="店铺"
            android:textColor="@color/t1"
            android:textSize="@dimen/t2" />

        <RelativeLayout
            android:id="@+id/rl_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp">
            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:clickable="false"
                android:drawableTop="@drawable/selector_goods_collect"
                android:drawablePadding="2dp"
                android:focusable="false"
                android:text="收藏"
                android:textColor="@color/t1"
                android:textSize="@dimen/t2" />
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_place_order"
            style="@style/ButtonStyle"
            android:layout_height="35dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="0dp"
            android:text="立即下单" />
    </LinearLayout>
</LinearLayout>