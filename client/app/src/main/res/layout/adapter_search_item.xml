<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_5_fff"
    android:padding="10dp"
    tools:ignore="MissingConstraints">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_thumb"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_placeholder" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="1dp"
        android:text="商家"
        android:textColor="@color/color_white"
        android:textSize="@dimen/t3"
        app:layout_constraintLeft_toRightOf="@id/iv_thumb" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="冰箱清洗"
        android:textColor="@color/t1"
        android:textSize="@dimen/t3"
        app:layout_constraintBottom_toBottomOf="@id/tv_source"
        app:layout_constraintLeft_toRightOf="@id/tv_source"
        app:layout_constraintTop_toTopOf="@id/tv_source" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_cate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="1dp"
        android:text="冰箱清洗"
        android:textColor="@color/t4"
        android:textSize="@dimen/t2"
        app:layout_constraintLeft_toLeftOf="@id/tv_source"
        app:layout_constraintTop_toBottomOf="@id/tv_source" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_serve_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:paddingRight="10dp"
        android:paddingBottom="1dp"
        android:singleLine="true"
        android:text="专业保洁服务"
        android:textColor="@color/t2"
        android:textSize="@dimen/t2"
        app:layout_constraintLeft_toRightOf="@id/tv_cate_name"
        app:layout_constraintTop_toTopOf="@id/tv_cate_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥50.00起"
        android:textColor="@color/t1"
        android:textSize="@dimen/t2"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumb"
        app:layout_constraintLeft_toLeftOf="@id/tv_cate_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="距您2km"
        android:textColor="@color/t1"
        android:textSize="@dimen/t2"
        app:layout_constraintBottom_toBottomOf="@id/iv_thumb"
        app:layout_constraintLeft_toRightOf="@id/tv_price" />

</androidx.constraintlayout.widget.ConstraintLayout>